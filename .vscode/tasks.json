{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Dashboard: Servir dist en localhost",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\scripts\\serve-dist.ps1",
        "-Port",
        "5501",
        "-Root",
        "dist"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "runOptions": {
        "runOn": "folderOpen",
        "instanceLimit": 1
      },
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": "^(.*)$",
              "message": 1
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^Servidor listo en",
            "endsPattern": "^Servidor listo en"
          }
        }
      ]
    }
  ]
}
