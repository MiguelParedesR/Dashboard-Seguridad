{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Dashboard: Servir dist en localhost",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\scripts\\serve-dist.ps1",
        "-Port",
        "5501",
        "-Root",
        "dist"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "runOptions": {
        "runOn": "folderOpen",
        "instanceLimit": 1
      },
      "isBackground": true
    }
  ]
}
